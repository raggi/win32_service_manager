#!/usr/bin/env ruby
require 'yaml'

require File.expand_path(
    File.join(File.dirname(__FILE__), '..', 'lib', 'win32_service_manager'))

def help
  abort <<-EOHELP
  Usage: #{File.basename($0)}
    Commands:
      - create
      - start
      - stop
      - delete
      - status
      - list
    
    Create takes 3 arguments, name, command and description.
    All other commands take a single argument, the name of the service.
    The list command takes no further arguments
  EOHELP
end

y case ARGV.shift
when /create/
  unless ARGV.size >= 2
    puts "Need more for create: name, command, and optional description"
    help
  end
  Win32ServiceManager.new.create(ARGV.shift.dup, ARGV.shift.dup, ARGV.shift.dup)
when /start/
  Win32ServiceManager.new.start(ARGV.shift.dup)
when /stop/
  Win32ServiceManager.new.stop(ARGV.shift.dup)
when /delete/
  Win32ServiceManager.new.delete(ARGV.shift.dup)
when /status/
  Win32ServiceManager.new.status(ARGV.shift.dup)
when /list/
  Win32ServiceManager.new.list
else
  help
end